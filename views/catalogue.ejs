                    <li><input type="checkbox" id="avance" name="avance"> <label for="avance">Avancé (10)</label></li>
                    <li><input type="checkbox" id="pro" name="pro"> <label for="pro">Professionnel (13)</label></li>
                </ul>
            </div>
        </div>

        <!-- Filter Environnement d'utilisation -->
        <div class="filtre-item">
            <input type="checkbox" id="env-utilisation" class="toggle-dropdown">
            <label for="env-utilisation" class="dropdown-btn">Environnement d'utilisation <span class="arrow">&#9662;</span></label>
            <div class="dropdown-content">
