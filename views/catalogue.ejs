                    <li><input type="checkbox" id="interieur" name="interieur"> <label for="interieur">Intérieur</label></li>
                    <li><input type="checkbox" id="exterieur" name="exterieur"> <label for="exterieur">Extérieur</label></li>
                </ul>
            </div>
        </div>

        <!-- Filter Dimensions et espace -->
