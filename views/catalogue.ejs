                    <li><input type="checkbox" id="compact" name="compact"> <label for="compact">Compact</label></li>
                    <li><input type="checkbox" id="large" name="large"> <label for="large">Large</label></li>
                </ul>
            </div>
        </div>

        <!-- Filter Prix -->
        <div class="filtre-item">
            <input type="checkbox" id="prix" class="toggle-dropdown">
            <label for="prix" class="dropdown-btn">Prix <span class="arrow">&#9662;</span></label>
            <div class="dropdown-content">
                <ul>
                    <li><input type="checkbox" id="moins50" name="moins50"> <label for="moins50">Moins de 50€</label></li>
                    <li><input type="checkbox" id="moins100" name="moins100"> <label for="moins100">50€ à 100€</label></li>
                    <li><input type="checkbox" id="plus100" name="plus100"> <label for="plus100">Plus de 100€</label></li>
                </ul>
            </div>
        </div>

        <!-- Filter Fonctionnalités spéciales -->
        <div class="filtre-item">
            <input type="checkbox" id="fonc-spec" class="toggle-dropdown">
            <label for="fonc-spec" class="dropdown-btn">Fonctionnalités spéciales <span class="arrow">&#9662;</span></label>
            <div class="dropdown-content">
