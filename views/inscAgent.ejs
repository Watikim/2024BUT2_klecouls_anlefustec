<link rel="stylesheet" href="./css/formulaire.css">

<% if (isAuth==true && Role=="admin" ) { %>


    <div class="form-container">
        <p class="title">S'inscrire</p>

        <form class="form" action="/nouvagent" method="POST">
            <div class="input-group">
                <label for="nouv_login">Login</label>
                <input type="text" name="nouv_login" id="nouv_login" required>
            </div>
            <div class="input-group">
                <label for="nouv_password">Mot de passe</label>
                <input type="password" name="nouv_password" id="nouv_password" required>
            </div>
            <div class="input-group">
                <label for="nouv_nom">Nom</label>
                <input type="text" name="nouv_nom" id="nouv_nom" required>
            </div>
            <div class="input-group">
                <label for="nouv_prenom">Prénom</label>
                <input type="text" name="nouv_prenom" id="nouv_prenom" required>
            </div>
            <div class="input-group">
                <label for="nouv_ddn">Date de naissance</label>
                <input type="date" name="nouv_ddn" id="nouv_ddn" required>
            </div>
            <div class="input-group">
                <label for="nouv_email">Email</label>
                <input type="email" name="nouv_email" id="nouv_email" required>
            </div>
            <button class="sign" type="submit">Créer un compte</button>
        </form>
    </div>

    <% } %>

   